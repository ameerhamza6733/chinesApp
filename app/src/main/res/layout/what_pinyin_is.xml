<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.assoftzone.chineslearning.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:id="@+id/IntroductionLayout"
        >
        <TextView
            android:id="@+id/PinyinBanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:text="Pinyin"
            android:textAlignment="center"
            >
        </TextView>
        <TextView
            android:id="@+id/PinyinIntroduction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:text="Pinyin is English Word"
            >
        </TextView>

        <TextView
            android:id="@+id/NextActivityIntials"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:drawableRight="@drawable/ic_arrow_forward_black_24dp"></TextView>

    </LinearLayout>


</RelativeLayout>
